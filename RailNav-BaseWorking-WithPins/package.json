{
  "name": "railway-navigation-app",
  "version": "1.0.0",
  "description": "Railway Navigation App with Pedestrian Path Routing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --win --mac --linux"
  },
  "keywords": [
    "railway",
    "navigation",
    "pedestrian",
    "routing"
  ],
  "author": "Railway Navigator",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.railway.navigator",
    "productName": "Railway Navigator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!backend/venv/**/*",
      "!backend/__pycache__/**/*",
      "!node_modules/**/*",
      "!.git/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "RailwayNavigator-Portable.exe"
    }
  }
}

